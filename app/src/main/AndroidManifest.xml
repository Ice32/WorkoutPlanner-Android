<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.workoutplanner">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="Scheduled workouts"
            android:theme="@style/AppTheme.NoActionBar">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <activity
            android:name=".CreateWorkoutActivity"
            android:label="Create a workout" />
        <activity android:name=".CreateNewExerciseActivity" />
        <activity
            android:name=".RegistrationActivity"
            android:label="Sign up" />
        <activity
            android:name=".ScheduleWorkoutActivity"
            android:label="Schedule workout" />
        <activity
            android:name=".WorkoutHistoryActivity"
            android:label="Done workouts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreatedWorkoutsActivity"
            android:label="Created workouts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddExistingExerciseActivity" />
        <activity android:name=".SetsAndRepsSelectorActivity" />
    </application>

</manifest>