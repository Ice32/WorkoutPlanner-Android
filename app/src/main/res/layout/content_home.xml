<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/homeScheduledWorkoutsLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
    >
        <TextView
            android:id="@+id/scheduledWorkoutsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="12dp"
            android:text="Scheduled workouts"
            android:textAlignment="center"

            android:textSize="@dimen/header_size" />
        <ImageView
            android:layout_width="@dimen/home_icons_size"
            android:layout_height="@dimen/home_icons_size"
            android:src="@drawable/calendar"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <fragment
        android:id="@+id/homeScheduledWorkoutsFragment"
        android:name="com.workoutplanner.ScheduledWorkoutsListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/homeScheduledWorkoutsLayout"/>

</android.support.constraint.ConstraintLayout>