<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/createdWorkoutsRecyclerView"
        android:name="com.workoutplanner.WorkoutsListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".view.common.WorkoutsListFragment"
        tools:listitem="@layout/common_workout_item" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createdWorkoutsEmptyView"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/createdWorkoutsRecyclerView"
        android:layout_marginTop="10dp"
        android:text="@string/created_workouts_empty_list_text"/>
</android.support.constraint.ConstraintLayout>