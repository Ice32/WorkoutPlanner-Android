<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/top_level_side_padding"
    android:paddingRight="@dimen/top_level_side_padding"
    tools:context=".view.createdWorkouts.CreateWorkoutActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/workoutNameWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/txtWorkoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txt_workout_name"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/exercisesSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_exercises_sub_header"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/workoutNameWrapper"
        android:fontFamily="@font/roboto_regular"
        android:textSize="17sp"/>
    <fragment
        android:id="@+id/selectableExerciseList"
        android:name="com.workoutplanner.view.exercises.SelectableExerciseFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exercisesSubHeader" />
</RelativeLayout>