<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewExerciseActivity"
    android:paddingTop="15dp"
    android:paddingLeft="@dimen/top_level_side_padding"
    android:paddingRight="@dimen/top_level_side_padding">




    <TextView
        android:id="@+id/createExerciseHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/create_new_exercise_header"
        android:textSize="@dimen/header_size"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
    />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/exerciseNameWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/createExerciseHeader"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Exercise name" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/setsAndReps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/exerciseNameWrapper"
    >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/setsWrapper"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sets"
            android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/repsWrapper"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
        >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reps"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btnAddNewExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new exercise"
        app:layout_constraintTop_toBottomOf="@+id/setsAndReps"
        android:theme="@style/PrimaryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</android.support.constraint.ConstraintLayout>