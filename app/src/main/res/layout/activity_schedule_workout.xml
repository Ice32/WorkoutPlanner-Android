<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleWorkoutActivity"
    android:paddingLeft="@dimen/top_level_side_padding"
    android:paddingRight="@dimen/top_level_side_padding">

    <TextView
        android:id="@+id/scheduleWorkoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule workout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/top_level_side_padding"
        android:textSize="@dimen/header_size"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/scheduleExactDateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exact date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scheduleWorkoutHeader"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        />

    <LinearLayout
        android:id="@+id/exactDateScheduleInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/scheduleExactDateHeader">
        <TextView
            android:id="@+id/txtExactDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Mon, Jun 4, 2018" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="12:00"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnFinishScheduleExact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/SecondaryFlatButton"
            android:text="Schedule"/>
    </LinearLayout>

    <TextView
        android:id="@+id/scheduleRepeatingDateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exactDateScheduleInput"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/scheduleRepeatingDateHeader">
        <Spinner
            android:id="@+id/spinnerWorkoutDay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="12:00"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnFinishScheduleRepeating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/SecondaryFlatButton"
            android:text="Schedule"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>