<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/existingExercisesFragmentItem"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    app:layout_constraintTop_toBottomOf="@+id/exercise1"
    android:paddingLeft="@dimen/material_list_two_lines_side_padding"
    android:paddingRight="@dimen/material_list_two_lines_side_padding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/addedExerciseHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/materialListHeaderSize"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:textColor="@color/primary_text"
        android:text="Psoas stretch" />
    <TextView
        android:id="@+id/addedExerciseSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 sets, 60 seconds each"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toBottomOf="@+id/addedExerciseHeader"
        android:layout_marginTop="6dp"
        android:textSize="@dimen/materialListSubHeaderSize"
        />
</android.support.constraint.ConstraintLayout>
