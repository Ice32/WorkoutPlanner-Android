<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/selectableExercise"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/selectableExerciseHeader"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/roboto_regular"
    android:textSize="@dimen/materialListHeaderSize"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="12dp"
    android:textColor="@color/primary_text"/>
<TextView
    android:id="@+id/selectableExerciseSubHeader"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/roboto_regular"
    app:layout_constraintTop_toBottomOf="@+id/selectableExerciseHeader"
    android:layout_marginTop="6dp"
    android:textSize="@dimen/materialListSubHeaderSize"
    />
<CheckBox
    android:id="@+id/selectableExerciseCheckBox"
    android:layout_width="24dp"
    android:layout_height="24dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>